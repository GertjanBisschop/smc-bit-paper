	url = {https://academic.oup.com/genetics/article/156/3/1393/6051663},
	doi = {10.1093/genetics/156.3.1393},
	abstract = {We describe a method for co-estimating r ϭ C/␮ (where C is the per-site recombination rate and ␮ is the per-site neutral mutation rate) and ⌰ ϭ 4Ne␮ (where Ne is the effective population size) from a population sample of molecular data. The technique is Metropolis-Hastings sampling: we explore a large number of possible reconstructions of the recombinant genealogy, weighting according to their posterior probability with regard to the data and working values of the parameters. Different relative rates of recombination at different locations can be accommodated if they are known from external evidence, but the algorithm cannot itself estimate rate differences. The estimates of ⌰ are accurate and apparently unbiased for a wide range of parameter values. However, when both ⌰ and r are relatively low, very long sequences are needed to estimate r accurately, and the estimates tend to be biased upward. We apply this method to data from the human lipoprotein lipase locus.},
	language = {en},
	number = {3},
	urldate = {2022-10-20},
	journal = {Genetics},
	author = {Kuhner, Mary K and Yamato, Jon and Felsenstein, Joseph},
	month = nov,
	year = {2000},
	pages = {1393--1401},
	file = {Kuhner et al. - 2000 - Maximum Likelihood Estimation of Recombination Rat.pdf:/home/gertjan/Zotero/storage/4KFSTIXI/Kuhner et al. - 2000 - Maximum Likelihood Estimation of Recombination Rat.pdf:application/pdf},
}

@article{eriksson_sequential_2009,
