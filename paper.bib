	journal = {Genetics},
	author = {Hudson, Richard R},
	month = mar,
	year = {1985},
	keywords = {Alleles, Genetic Linkage, Models, Genetic, Selection, Genetic},
	pages = {611--631},
	file = {Full Text:/home/gertjan/Zotero/storage/H57NXPH3/Hudson - 1985 - The sampling distribution of linkage disequilibriu.pdf:application/pdf;Hudson - 1985 - THE SAMPLING DISTRIBUTION OF LINKAGE DISEQUILIBRIU.pdf:/home/gertjan/Zotero/storage/DT8QXZHJ/Hudson - 1985 - THE SAMPLING DISTRIBUTION OF LINKAGE DISEQUILIBRIU.pdf:application/pdf},
